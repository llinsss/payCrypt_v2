{
  "name": "@tagged/stellar-sdk",
  "version": "1.0.0",
  "description": "TypeScript/JavaScript client library for easy integration with the Tagged Stellar API",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "stellar",
    "tagged",
    "sdk",
    "blockchain",
    "payments",
    "cryptocurrency"
  ],
  "author": "Tagged",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/llinsss/payCrypt_v2"
  },
  "bugs": {
    "url": "https://github.com/llinsss/payCrypt_v2/issues"
  },
  "homepage": "https://github.com/llinsss/payCrypt_v2#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
